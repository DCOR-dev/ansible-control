
# Note that nginx only caches GET and HEAD (not POST) by default:
# http://nginx.org/en/docs/http/ngx_http_proxy_module.html#proxy_cache_methods
proxy_cache_path /cache/nginx_cache levels=1:2 keys_zone=ANONYM:1d max_size=250m;
proxy_cache_path /cache/nginx_cache_static levels=1:2 keys_zone=STATIC:1d max_size=250m;
proxy_temp_path /cache/nginx_proxy 1 2;

map $upstream_http_cache_control $ckan_cache_bypass {
    default     1;
    ~*public    0;
}
